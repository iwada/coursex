<div class="row-fluid" >
    <% if current_user.admin? %>
  <%= render 'sidebar' %>
      <% else %>
       <%= render 'employeesidebar' %>
      <% end %>
  <div class="span9">
    <div class="hero-unit">

      <%= form_for @employee do |f|%>

          <%= render 'form' ,:f => f%>

          <%= f.submit :class=> "btn btn-primary" %>
          <% if current_user.admin? %>
          <%= link_to "Delete employee" , @employee, :method =>:delete,:confirm =>"You Sure?",
                      :title => "Delete #{@employee.firstname}",:class => "btn btn-danger" %>
              <% end %>
          <%= link_to 'Cancel', employees_dashboard_path,:class => "btn" %>

      <% end %>
    </div>
  </div>
</div>
