<script type="text/javascript ">
    $(function ()
    { $("#firstname").tooltip()
        $("#lastname").tooltip()
        $("#mobile").tooltip()
        $("#level").tooltip()
        $("#sex").tooltip()
        $("#email").tooltip()
        $("#doj").tooltip()
        $("#photo").tooltip()


    });
</script>
<div class="clearfix">
  <label>First Name</label>
  <div class="input">
    <%=f.text_field :firstname %>
    <a href="#" id="firstname" rel="tooltip" data-original-title="Name as on Official document">
      <i class="icon-exclamation-sign"></i>

    </a>
  </div>
</div>

<div class="clearfix">
  <label>Last Name</label>
  <div class="input">
    <!--<%= collection_select(:course, :tutor, Course.where(:category_of_course ^ @employee.id ), :id, :name, {:prompt => false},:class=> "text") %>-->
    <%=f.text_field :lastname %>
    <a href="#" id="lastname" rel="tooltip" data-original-title="Name as on Official document">
      <i class="icon-exclamation-sign"></i>

    </a>
  </div>
</div>

<div class="clearfix">
  <label>Mobile Number</label>
  <div class="input">
    <%=f.text_field :mobile %>
    <a href="#" id="mobile" rel="tooltip" data-original-title="We Would contact you on this">
      <i class="icon-exclamation-sign"></i>

    </a>
  </div>
</div>

<% if current_user.admin? %>
<div class="clearfix">
<label>Level</label>
  <div class="input">
<%= select( :employee, :level, { "Level One" => 1, "Level Two" => 2 , "Level Three" => 3},{}, {:class=>"text"}) %>
    <a href="#" id="level" rel="tooltip" data-original-title="Choose Level Wisely">
      <i class="icon-exclamation-sign"></i>

    </a>
</div>
</div>
<% end %>


<div class="clearfix">
  <label>Sex</label>
  <div class="input">
    <%= select( :employee, :sex, { "Male" => "Male", "Female" => "Female"},{}, {:class=>"tet"}) %>
    <a href="#" id="sex" rel="tooltip" data-original-title="Male or Female?">
      <i class="icon-exclamation-sign"></i>

    </a>
  </div>
</div>

<div class="clearfix">
  <label>Email Address</label>
  <div class="input">
    <%=f.text_field :email %>
    <a href="#" id="email" rel="tooltip" data-original-title="MUST be same as the one you signed up with">
      <i class="icon-exclamation-sign"></i>

    </a>
  </div>
</div>

<div class="clearfix">
  <label>Photo</label>
  <div class="input">
    <%= f.file_field :avatar %>
    <a href="#" id="photo" rel="tooltip" data-original-title="Should be Recent">
      <i class="icon-exclamation-sign"></i>

    </a>
  </div>
</div>



<div class="clearfix">
  <label>Date of Joining</label>
  <div class="input">
    <span class="xlarge uneditable-input">September 3rd, 2011</span>

  </div>
</div>

