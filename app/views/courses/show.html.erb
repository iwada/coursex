<div class="row-fluid" >
  <%= render "sidebar" %>

  <div class="span9">
    <div class="hero-unit">

      <table>
        <tbody>
        <tr>
          <td>Course ID</td>
          <td></td>
        </tr>
        <tr>
          <td >Course Name</td>
          <td ><%= @course.name%></td>
        </tr>

        <tr>
          <td >Course Description</td>
          <td ><%= @course.description%></td>
        </tr>

        <tr>
          <td >Course Tutor</td>
          <td ><%= @course.tutor%></td>
        </tr>

        <tr>
          <td >Date of Course</td>
          <td ><%= @course.date_of_course%></td >
        </tr>

        <tr>
          <td >Time of Course</td>
          <td ><%= @course.time_of_course%></td >
        </tr>

        <tr>
          <td >Course Category</td>
          <td ><%= @course.category_of_course%></td >
        </tr>

        <tr>
          <td >Course Venue</td>
          <td ><%= @course.roomnumber%></td >
        </tr>

        <tr>
          <td >Maximum Capacity</td>
          <td ><%= @course.maxallowed%></td >
        </tr>

        <tr>
          <td >Eligible Employees</td>
          <td >Level 1, Level 2</td >
        </tr>

        <tr>
          <td >Created on</td>
          <td  ><%= @course.created_at.strftime("%d %b. %Y")%></td>
        </tr>

        <tr>
          <td >Last Modified on</td>
          <td  ><%= @course.updated_at.strftime("%d %b. %Y")%></td>
        </tr>
        </tbody>

      </table>
      <%= link_to 'Edit Course', edit_course_path(@course),:class=>"btn btn-primary" %>
      <%= link_to "Delete Course" , @course, :method =>:delete,:confirm =>"Are You Sure You want to Delete this Course?",
                  :title => "Delete {@course.name}",:class => "btn btn-danger" %>
      <%= link_to 'Cancel', courses_path,:class => "btn" %>
    </div>
  </div>
</div>

