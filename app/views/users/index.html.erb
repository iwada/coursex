<div class="row-fluid" >

  <%= render 'adminsidebar' %>


  <div class="span9">
    <div class="hero-unit">
      <table class="zebra-striped" id="sortTableExample">
        <thead>
        <tr>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Language</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
        </thead>
        <tbody>
        <% @user.each do |user| %>
            <tr>
              <td><%= user.email %></td>
              <td><%= user.email %></td>
              <td><%= user.email %></td>
              <td><%= link_to 'More ',user,:class => 'btn btn-mini'%></td>
              <td><%= link_to 'Edit', edit_user_path(user), :class => 'btn btn-mini'%></td>



              <td><%= link_to 'Delete', user, :confirm => 'Are you sure?',
                              :method => :delete, :class => 'btn btn-mini btn-danger' %></td >
        <% end %>
        </tr>
        </tbody>
      </table>
      <%= paginate @user %>
    </div>
  </div>
</div>

