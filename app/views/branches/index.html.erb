<div class="row-fluid" >

  <%= render "sidebar" %>


  <div class="span9">
    <div class="hero-unit">
      <table class="zebra-striped" id="sortTableExample">
        <thead>
        <tr>
          <th> Branch ID:</th>
          <th>Branch Name</th>
          <th>Branch Location </th>

          <th></th>
          <th></th>
          <th></th>
        </tr>
        </thead>
        <tbody>
        <% @branch.each do |branch| %>

            <tr>
              <td>BR-<%= branch.id %></td>
              <td><%= branch.name %></td>
              <td><%= branch.country%></td>
              <td><%= link_to 'More ',branch%></td>
              <td><%= link_to 'Edit', edit_branch_path(branch) %></td>



              <td><%= link_to 'Destroy', branch, :confirm => 'Are you sure?',
                              :method => :delete %></td >
        <% end %>
        </tr>
        </tbody>
      </table>
      <%= paginate @branch %>

    </div>
  </div>
</div>