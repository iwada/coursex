<fieldset>
  <legend><%= controller.action_name.capitalize %> Trainer</legend>

<div class="clearfix">
  <label>First Name</label>
  <div class="input">
    <%=f.text_field :firstname %>
  </div>
</div>


<div class="clearfix">
  <label>Last Name</label>
  <div class="input">
    <%=f.text_field :lastname%>
    <a href="#" id="example" class="" rel="popover" data-content="Please Enter Your Last Name" data-original-title="Please Enter Your Name">
      <i class="icon-exclamation-sign"></i>
      </a>
  </div>
</div>

<div class="clearfix">
  <label>Mobile Number</label>
  <div class="input">
    <%=f.text_field :mobile %>
  </div>
</div>

<div class="clearfix">
  <label>Email Adress</label>
  <div class="input">
    <%=f.text_field :email %>
  </div>
</div>

<div class="clearfix">
  <label>Teaches:</label>
  <div class="input">
    <%= collection_select(:trainer, :handle, Course.all, :name, :name, {:prompt => false},:class=> "text") %>

  </div>
</div>


<div class="clearfix">
  <label>Sex</label>
  <div class="input">
    <%= select( :trainer, :sex, { "Male" => "Male", "Female" => "Female"},{}, {:class=>"text"}) %>
  </div>
</div>

<div class="clearfix">
  <label>Date of Joining</label>
  <div class="input">
    <span class="xlarge uneditable-input"><%= Time.now.strftime("%d %b. %Y") %></span>
  </div>
</div>
    </fieldset>