

<div class="clearfix">
  <label>First Name</label>
  <div class="input">
    <%=f.text_field :firstname %>
  </div>
</div>

<div class="clearfix">
  <label>Last Name</label>
  <div class="input">
    <%=f.text_field :lastname %>
  </div>
</div>

<div class="clearfix">
  <label>Mobile Number</label>
  <div class="input">
    <%=f.text_field :mobile %>
  </div>
</div>

<div class="clearfix">
  <label>Email Adress</label>
  <div class="input">
    <%=f.text_field :email %>
  </div>
</div>

<div class="clearfix">
  <label>Teaches:</label>
  <div class="input">
    <%= select( :trainer, :handle, { "Level 1" => 1, "Level 2" => 2},{}, {:class=>"text"}) %>

  </div>
</div>


<div class="clearfix">
  <label>Sex</label>
  <div class="input">
    <%= select( :trainer, :sex, { "Male" => "Male", "Female" => "Female"},{}, {:class=>"text"}) %>
  </div>
</div>

<div class="clearfix">
  <label>Date of Joining</label>
  <div class="input">
    <span class="xlarge uneditable-input"><%= Time.now.strftime("%d %b. %Y") %></span>
  </div>
</div>