<div class="row-fluid" id="index" >

  <%= render "sidebar" %>


  <div class="span9">
    <div class="hero-unit">
      <fieldset >
        <legend >Trainers Listing</legend>

      <table class="zebra-striped" id="sortTableExample">
        <thead>
        <tr>
          <th> ID </th>
          <th> First Name</th>
          <th>Others</th>
          <th>Handles </th>
          <th>Sex</th>
          <th>Mobile</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
        </thead>
        <tbody>
        <% @trainer.each do |trainer| %>

            <tr>
              <td>TR-<%= trainer.id %></td>
              <td><%= trainer.firstname %></td>
              <td><%= trainer.lastname %></td>
              <td><%= trainer.handle%></td>
              <td><%= trainer.sex %></td>
              <td><%= trainer.mobile %></td>
              <td><%= link_to 'More ',trainer,:class => 'btn btn-mini'%></td>
              <td><%= link_to 'Edit', edit_trainer_path(trainer),:class => 'btn btn-mini' %></td>
              <td><%= link_to 'Destroy', trainer, :confirm => 'Are you sure?',
                              :method => :delete , :class => 'btn btn-mini btn-danger'%></td >
        <% end %>
        </tr>
        </tbody>
      </table>
      </fieldset>
      <%= paginate @trainer %>

    </div>
  </div>
</div>