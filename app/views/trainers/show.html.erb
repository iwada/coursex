

<div class="row-fluid" >
  <%= render "trainersidebar" %>

  <div class="span9">
    <div class="hero-unit">

      <table>
        <tbody>

        <tr>

        </tr>
        <tr>
          <td >ID</td>
          <td ><%=@trainer.firstname.chars.first.to_s %> <%= @trainer.id%></td>
        </tr>




        <tr>
          <td >First Name</td>
          <td ><%= @trainer.firstname%></td>
        </tr>

        <tr>
          <td >Last Name</td>
          <td ><%= @trainer.lastname%></td>
        </tr>

        <tr>
          <td >Sex</td>
          <td ><%= @trainer.sex%></td>
        </tr>


        <tr>
          <td >Course Handled</td>
          <td ><%= @trainer.handle%></td>
        </tr>
        <tr>
          <td >Mobile</td>
          <td ><%= @trainer.mobile%></td >
        </tr>

        <tr>
          <td >Email Address</td>
          <td ><%= current_user.email%></td >
        </tr>

        <tr>
          <td >Date of Joining</td>
          <td ><%= @trainer.created_at.strftime("%d %b. %Y")%></td >
        </tr>


        </tbody>

      </table>
      <%= link_to 'Edit trainer', edit_trainer_path(@trainer),:class=>"btn btn-primary",:id=>"example" %>
      <% if current_user.admin? %>
      <%= link_to "Delete Trainer" , @trainer, :method =>:delete,:confirm =>"You Sure?",
                  :title => "Delete {@trainer.name}",:class => "btn btn-danger" %>
       <% end %>
      <%= link_to 'Cancel', trainers_path,:class => "btn" %>
    </div>
  </div>
</div>

